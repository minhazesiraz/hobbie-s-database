{
   /* SPECIFIES THE PATH TO CUSTOM 'CASCADING STYLE SHEETS - CSS' DATA FILE. */
   "css.customData": [
      ".vscode/CascadingStyleSheets.json"
   ],
   /* SETS THE COLOR THEME TO "LEARN WITH SUMIT THEME - DRACULA VERSION" */
   "workbench.colorTheme": "Learn with Sumit Theme - Dracula version",
   "workbench.iconTheme": "Symbols of VSCode - Shades of Gray",
   "workbench.tree.indent": 16,
   /* CUSTOMIZES COLORS FOR THE ACTIVITY BAR - DELETE THE CODES FROM SETTINGS DOT JSON WHEN USING DATABASE. */
   /*"workbench.colorCustomizations": {
      "activityBar.background": "#84cc16",
      "activityBar.activeBackground": "#ffffff59",
      "activityBar.activeBorder": "#ffffff",
      "activityBar.foreground": "#ffffff",
      "activityBar.inactiveForeground": "#ffffffa6",
      "activityBarBadge.background": "#84cc16",
      "activityBarBadge.foreground": "#ffffffa6",
      "tab.activeBorderTop": "#84cc16"
   },*/
   "git.autofetch": true,
   /* Controls whether #editor.tabSize and #editor.insertSpaces will be automatically detected when a file is opened based on the file contents. */
   "editor.defaultFormatter": null,
   "editor.detectIndentation": false,
   "editor.insertSpaces": true,
   "editor.tabSize": 3,
   "editor.lineNumbers": "on",
   "editor.letterSpacing": 0,
   "editor.formatOnSave": true,
   "breadcrumbs.enabled": false,
   /* SETTINGS SPECIFIC TO JAVASCRIPT REACT FILES. */
   "[javascriptreact]": {
      /* ORGANIZE IMPORTS ACTION EXPLICITLY ON SAVE. */
      "editor.codeActionsOnSave": {
         "source.organizeImports": "explicit",
         // "source.fixAll.eslint": "explicit"
      }
   },
   /* SETTINGS SPECIFIC TO JAVASCRIPT FILES. */
   "[javascript]": {
      /* ORGANIZE IMPORTS ACTION EXPLICITLY ON SAVE. */
      "editor.codeActionsOnSave": {
         "source.organizeImports": "explicit",
         // "source.fixAll.eslint": "explicit"
      }
   },
   /* FONTS DOWNLOAD BY THE LINKS. - https://www.jetbrains.com/lp/mono/ */
   "editor.fontFamily": "'JetBrains Mono', monospace",
   "editor.fontLigatures": true,
   "editor.fontWeight": "normal",
   "editor.fontSize": 14,
   "editor.wordWrap": "on",
   "editor.minimap.enabled": false,
   /* COMMENTS */
   "editor.tokenColorCustomizations": {
      "comments": "#9c9c9c",
      "textMateRules": [
         {
            "scope": "comment",
            "settings": {
               "fontStyle": "italic"
            }
         }
      ]
   },
   /* CURSOR SETTINGS FOR EDITOR. */
   "editor.cursorSmoothCaretAnimation": "explicit",
   "editor.cursorBlinking": "expand",
   /* https://www.youtube.com/watch?v=ii8GaRjRoNI&t=608s */
   "emmet.includeLanguages": {
      "javascript": "javascriptreact"
   },
   /* AUTOMATICALLY UPDATES IMPORTS ON FILE MOVE FOR JAVASCRIPT FILES. */
   "javascript.updateImportsOnFileMove.enabled": "always",
   /* FILE ASSOCIATIONS FOR JAVASCRIPT REACT FILES. */
   "files.associations": {
      "*.jsx": "javascriptreact",
      "*.js": "javascriptreact"
   },
   /* SPECIFIES USER-DEFINED WORDS FOR SPELL CHECKING. */
   "cSpell.userWords": [
      "Signup",
      "termsofservice"
   ]
}